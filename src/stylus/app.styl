@require 'menu-glyphs.styl'
@require 'spin.styl'
@require 'mixins/ordered-mixins.styl'
@require 'components/**/**'
@require 'test.styl'

body
  default-font()
  padding 0px
  margin 0px
  background-color bbgray

.content-box
  text-align center
  height 100%

.app
  absolute(0, 0, 0, 0)
  text-align left

.mockup-only
  text-decoration line-through

.workspace
  width 100%
  enable-flex(column)

.iframed-workspace
  width 100%
  enable-flex(column)
  .canvas
    top palette-and-actions-height
    &.full
      top 0

label > input[type="checkbox"]
  margin-right 0.5em
